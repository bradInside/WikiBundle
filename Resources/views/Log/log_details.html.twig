{% extends 'ClarolineCoreBundle:Log:view_details.html.twig' %}

{% block logDetailsContext %}
    {{ parent() }}
    {% if constant('Icap\\WikiBundle\\Event\\Log\\LogSectionCreateEvent::ACTION') == log.action %}
        {% include 'IcapWikiBundle:Log:log_details_section_create.html.twig' %}
    {% elseif constant('Icap\\WikiBundle\\Event\\Log\\LogSectionMoveEvent::ACTION') == log.action %}
        {% include 'IcapWikiBundle:Log:log_details_section_read.html.twig' %}
    {% elseif constant('Icap\\WikiBundle\\Event\\Log\\LogSectionUpdateEvent::ACTION') == log.action %}
        {% include 'IcapWikiBundle:Log:log_details_section_update.html.twig' %}
    {% elseif constant('Icap\\WikiBundle\\Event\\Log\\LogSectionDeleteEvent::ACTION') == log.action %}
        {% include 'IcapWikiBundle:Log:log_details_section_delete.html.twig' %}
    {% endif %}
{% endblock %}